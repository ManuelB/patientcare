<View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.f" xmlns:tnt="sap.tnt" displayBlock="true" controllerName="patientcare.manager.view.App" height="100%">
	<Shell appWidthLimited="false">
		<tnt:ToolPage id="toolPage">
			<tnt:header>
				<f:ShellBar title="Patient Care" secondTitle="Patient record and sharing app" homeIcon="https://ui5.sap.com/1.77.1/resources/sap/ui/documentation/sdk/images/logo_ui5.png" showMenuButton="true" showCopilot="false" showSearch="true" showNotifications="true" showProductSwitcher="false" notificationsNumber="0">
                    <!--<f:menu>
                        <Menu>
                            <MenuItem text="Flight booking" icon="sap-icon://flight" />
                            <MenuItem text="Car rental" icon="sap-icon://car-rental" />
                        </Menu>
                    </f:menu>-->
                    <f:profile>
                        <f:Avatar initials="UI"/>
                    </f:profile>
                </f:ShellBar>
			</tnt:header>
            <tnt:sideContent>
                <tnt:SideNavigation expanded="true" selectedKey="{/selectedKey}" itemSelect=".onItemSelect">
                    <tnt:NavigationList items="{path: 'JMap>/Mailboxes'}">
                        <tnt:NavigationListItem text="{JMap>name}" key="{key}">
                        </tnt:NavigationListItem>
                    </tnt:NavigationList>
                    <tnt:fixedItem>
                        <tnt:NavigationList items="{path: '/fixedNavigation'}">
                            <tnt:NavigationListItem text="{title}" icon="{icon}" />
                        </tnt:NavigationList>
                    </tnt:fixedItem>
                </tnt:SideNavigation>
            </tnt:sideContent>
            <tnt:mainContents>
                <f:FlexibleColumnLayout id="fcl" stateChange="onStateChanged"	layout="{Layout>/layout}" backgroundDesign="Solid">
                    <f:beginColumnPages>
                        <Page>
                            <List
                            items="{JMap>/EMails}"
                            headerText="E-Mails">
                                <ObjectListItem
                                    title="{JMap>subject}"
                                    type="Active"
                                    press="onEMailPress">
                                    <firstStatus>
                                        <ObjectStatus text="{JMap>from/name} &lt;{JMap>from/email}&gt;" />
                                    </firstStatus>
                                    <ObjectAttribute text="{
                                        path: 'JMap>date',
                                        type: 'sap.ui.model.type.DateTime',
                                        formatOptions: {
                                            source : {
                                                pattern: 'yyyy-MM-ddTHH:mm:ssZ' 
                                            }
                                        }
                                    }" />
                                </ObjectListItem>
                            </List>
                        </Page>
                    </f:beginColumnPages>
                    <f:midColumnPages>

                    </f:midColumnPages>
                    <f:endColumnPages>
                    </f:endColumnPages>
                </f:FlexibleColumnLayout>
            </tnt:mainContents>
		</tnt:ToolPage>
	</Shell>
</View>
